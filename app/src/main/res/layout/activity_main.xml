<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.viacheslav_ivanov.drinkometer.MainActivity">

    <Button
        android:id="@+id/button_statistic"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:text="@string/statistic_button_name"
        app:layout_constraintTop_toBottomOf="@+id/button_delete"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/label_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal = "true"
        android:text="@string/label_top"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/label_rank"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="135dp"
        tools:paddingTop="0dp" />

    <TextView
        android:id="@+id/label_rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textSize="40dp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="65dp" />

    <Button
        android:id="@+id/button_fail"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:text="@string/fail_button_name"
        app:layout_constraintTop_toBottomOf="@+id/button_start"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:text="@string/delete_button_name"
        app:layout_constraintTop_toBottomOf="@+id/button_fail"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/button_start"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/start_button_name"
        app:layout_constraintTop_toBottomOf="@+id/label_rank"
        tools:layout_editor_absoluteX="8dp" />
</android.support.constraint.ConstraintLayout>
